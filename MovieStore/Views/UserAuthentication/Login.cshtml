@model MovieStore.Models.DTO.LoginModel
@{
}


<div class="page">
    <form class="w-40 auth-form" asp-action="Login" method="post">
        <h2 class="pb-10">Login</h2>
        <div class="input-container">
            <label asp-for="Username" class="w-40">Username</label>
            <input type="text" class="input" asp-for="Username">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Username"></span>
        </div>

        <div class="input-container">
            <label asp-for="Password" class="w-40">Password</label>
            <input type="password" class="input" asp-for="Password">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Password"></span>
        </div>

        @if (TempData["msg"] != null)
        {
            <div class="alert mb-1">
                @TempData["msg"]
            </div>
        }

        <div class="input-container authBtn">
            <button class="btn btn-default" type="submit">Login</button>
        </div>

        <p><a href="@Url.Action("Register", "UserAuthentication")">Forgot Pasword?</a></p>
        <p>Don't have an account yet? <a href="@Url.Action("Register", "UserAuthentication")">Register here</a></p>
    </form>    
</div>


